# Environment variables for OceanKicks frontend (Create React App)
# Copy this file to `.env` and adjust values for your environment.

# Base URL for the backend API (no trailing slash)
# Example: https://api.example.com or http://localhost:4000
REACT_APP_API_BASE_URL=

# Force using local mock data instead of calling backend.
# Accepts: "true" or "false"
# If not set, the app will automatically use mocks when REACT_APP_API_BASE_URL is empty.
REACT_APP_USE_MOCKS=false
